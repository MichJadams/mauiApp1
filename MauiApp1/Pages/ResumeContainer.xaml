<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.ResumeContainer"
             xmlns:local="clr-namespace:MauiApp1.Pages"
             xmlns:components="clr-namespace:MauiApp1.Components"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.PdfViewer;assembly=Syncfusion.Maui.PdfViewer"
             Title="CV Input">
    <Grid
        RowSpacing="10"
        ColumnSpacing="10"
        RowDefinitions="Auto"
        ColumnDefinitions="Auto, Auto"
        >

        <Grid 
            Grid.Column="0"
            Grid.Row="0"
            Padding="20"
            RowSpacing="10"
            ColumnSpacing="10"
            RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto"
            ColumnDefinitions="Auto, *">
            <Label 
            Grid.Column="0" 
            Grid.Row="0"
            Text="This is the Resume Hub"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Button 
            Grid.Column="3"
            Grid.Row="1"    
            Clicked="OnSave" 
            HeightRequest="20" 
            WidthRequest="80" 
            Text="Save" />

            <Button 
            Grid.Column="0"
            Grid.Row="1"    
            VerticalOptions="Start" 
            HorizontalOptions="Start"
            Clicked="OnNavigteBack" 
            HeightRequest="20" 
            WidthRequest="80" 
            Text="Back"/>

            <Label 
            Grid.Column="0"
            Grid.Row="3"
            Text="Username" />
            <Entry 
            Grid.Column="1" 
            Grid.Row="3"
            x:Name="UsernameEntry" 
            Placeholder="Enter your full name" />

            <Label 
            Grid.Column="0"
            Grid.Row="4"
            Text="User Address"
            />
            <Entry 
            Grid.Column="1"
            Grid.Row="4"
            x:Name="UserAddressEntry" 
            Placeholder="Enter your address" 
            />

            <Label 
            Grid.Column="0"
            Grid.Row="5"
            Text="UserSummary" 
            />
            <Entry 
            Grid.Column="1"
            Grid.Row="5"
            x:Name="UserSummaryEntry" 
            Placeholder="What describes you as a worker" 
            />


            <components:JobCard
                x:Name="JobCardInput"
                Grid.Column="0"
                Grid.Row="6"
                Grid.ColumnSpan="3"
                />


        </Grid>
        <ListView
            x:Name="resumeItemContainer"
            Grid.Column="1"
            Grid.Row="0"
            >

        </ListView>
    </Grid>
</ContentPage>